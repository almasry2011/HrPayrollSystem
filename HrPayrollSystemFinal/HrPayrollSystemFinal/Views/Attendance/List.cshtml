
@{
    ViewData["Title"] = "Siyahı";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Davamiyyət cədvəlində axtarış</h2>
<p>
    <a asp-action="Add">Əlavə et</a>
</p>

<form asp-controller="Attendance" asp-action="List" method="post">
    <div class="form-row">
        <div class="form-group col-md-2">
            <select asp-items="Html.GetEnumSelectList<Month>()" class="form-control" name="enteredMonth">
                <option value="" selected="selected"></option>
            </select>
        </div>
        <div class="form-group col-md-3">
            <input type="submit" value="Axtarış et" class="btn btn-outline-primary" />
        </div>
    </div>
</form>

<hr />
<div>
    <div class="card shadow mb-4">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Işçinin A.S.A</th>
                            <th>Tarix </th>
                            <th>Səbəb növü</th>
                            <th>Davamiyyət</th>
                            <th>Hansı səbəbə</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </div>

</div>

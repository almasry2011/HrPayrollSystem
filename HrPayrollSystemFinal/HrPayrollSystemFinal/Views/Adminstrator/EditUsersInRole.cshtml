@model List<UserRoleViewModel>
@{
    ViewData["Title"] = "Düzəliş et";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var roleId = ViewBag.roleId;
}

<form method="post">
    <div class="card">
        <div class="card-header">
            <h2>Əlavə et və ya sil</h2>
        </div>
        <div class="card-body">
            @for (int i= 0; i < Model.Count; i++)
            {
            <div class="form-check m-1">
                <input asp-for="@Model[i].UserId" type="hidden"/>
                <input asp-for="@Model[i].UserName" type="hidden"/>
                <input asp-for="@Model[i].IsSelected" class="form-check-input" />
                <label class="form-check-label" asp-for="@Model[i].IsSelected">
                    @Model[i].UserName
                </label>
            </div>
            }
        </div>
        <div class="card-footer text-muted">
            <input type="submit" value="Düzəliş et" class="btn btn-outline-primary"/>
            <a asp-action="EditRole" class="btn btn-outline-primary" asp-route-id="@roleId">Cancel</a>
        </div>
    </div>

</form>
@model IEnumerable<Vacation>

@{
    ViewData["Title"] = "Məzuniyyət";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Məzuniyyət cədvəli</h2>

<p>
    <a asp-action="AddVacation">Əlavə et</a>
</p>


<div>
    <div class="card shadow mb-4">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>
                                İşçinin A.S.A
                            </th>
                            <th>
                                Məzuniyyət tarixilər
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody id="myTable">
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @item.Worker.Name
                                    @item.Worker.Surname
                                    @item.Worker.FatherName
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.VacationStarted) -

                                    @Html.DisplayFor(modelItem => item.VacationEnded)
                                </td>
                                <td>
                                    <a class="btn btn-outline-danger delete"
                                       data-id="@item.Id"
                                       data-controller="Vacation"
                                       data-action="Delete"
                                       data-body-message="Siz bu informasiyani silməkdən əminsiniz?">
                                        Məlumatı sil
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>
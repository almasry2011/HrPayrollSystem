@model IEnumerable<HrPayrollSystemFinal.Models.ShopPromotion>

@{
    ViewData["Title"] = "Mağaza bonusu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Mağaza üzrə bonus</h2>

<p>
    <a asp-action="ShopPromotion">Əlavə et</a>
</p>
<div>
    <div class="card shadow mb-4">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>
                                Mağaza
                            </th>
                            <th>
                                İşçiyə veriləcək bonus
                            </th>
                            <th>
                                Maksimum məbləğ
                            </th>
                            <th>
                                Minimum məbləğ
                            </th>
                            <th>
                                Başlama tarixi
                            </th>
                            <th>
                                Bitmə tarixi
                            </th>
            
                        </tr>
                    </thead>
                    <tbody id="myTable">
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td>
                                @item.Shop.Name
                            </td>
                            <td>
                                @item.Reward
                            </td>
                            <td>
                                @item.MaxAmount
                            </td>
                            <td>
                                @item.MinAmount
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.StartDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FinishDate)
                            </td>
                            <td>
                              
                                <a class="btn btn-outline-danger delete"
                                   data-id="@item.Id"
                                   data-controller="Promotion"
                                   data-action="DeleteShop"
                                   data-body-message="Siz bu informasiyani silməkdən əminsiniz?">
                                    Məlumatı sil
                                </a>
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    
</div>

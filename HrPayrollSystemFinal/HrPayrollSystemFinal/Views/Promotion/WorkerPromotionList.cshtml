@model IEnumerable<HrPayrollSystemFinal.Models.WorkerPromotion>

@{
    ViewData["Title"] = "İşçi bonusu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Işçiyə görə bonus siyahısı</h2>

<p>
    <a asp-action="WorkerPromotion">İşçiyə bonus əlavə et</a>
</p>

<div>
    <div class="card shadow mb-4">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>
                                İşçinin S.A.A
                            </th>
                            <th>
                                Bonus
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody id="myTable">
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @item.Worker.Surname
                                    @item.Worker.Name
                                    @item.Worker.FatherName
                                </td>
                                <td>
                                    @item.Reward ₼ (AZN)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Date)
                                </td>
                                <td>
                                    <a asp-action="CurrentWorkplaceDetails" asp-controller="Worker" asp-route-id="@item.Worker.Id" class="btn btn-outline-primary">İşçinin vəzifəsi haqqında</a> |
                                    <a asp-action="Details" asp-controller="Worker" asp-route-id="@item.Worker.Id" class="btn btn-outline-primary">İşçinin şəxsi məlumatı</a> |
                                    <a class="btn btn-outline-danger delete"
                                       data-id="@item.Id"
                                       data-controller="Promotion"
                                       data-action="Delete"
                                       data-body-message="Siz bu informasiyani silməkdən əminsiniz?">
                                        Məlumatı sil
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>
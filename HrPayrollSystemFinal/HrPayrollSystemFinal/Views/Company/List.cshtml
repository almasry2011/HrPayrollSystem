@model IEnumerable<HrPayrollSystemFinal.Models.Company>

@{
    ViewData["Title"] = "Şirkət siyahısı";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Şirkətlərin siyahısı</h2>

<p>
    <a asp-action="Create">Yeni şirkət adı əlavə et</a>
</p>

<div>
    <div class="card shadow mb-4">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Şirkət Adı</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id">Düzəliş et</a> |
                                    <a class="btn btn-outline-danger delete"
                                       data-id="@item.Id"
                                       data-controller="Company"
                                       data-action="Delete"
                                       data-body-message="Siz bu informasiyani silməkden əminsiniz?">
                                        Məlumatı sil
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>
@model IEnumerable<HrPayrollSystemFinal.Models.Position>

@{
    ViewData["Title"] = "Siyahı";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Vəzifələrin siyahisi</h2>

<p>
    <a asp-action="Create">Yeni vəzifə əlavə et</a>
</p>

<div>
    <div class="card shadow mb-4">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Vəzifə Adı</th>
                            <th>Maaş </th>
                            <th>Şirkət </th>
                            <th>Departament </th>
                        </tr>
                    </thead>
                    <tbody id="myTable">
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Salary) ₼ (AZN)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Company.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Department.Name)
                                </td>
                                <td>
                                    <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id">Düzəliş et</a> |
                                    <a class="btn btn-outline-danger delete"
                                       data-id="@item.Id"
                                       data-controller="Position"
                                       data-action="Delete"
                                       data-body-message="Siz bu informasiyani silməkdən əminsiniz?">
                                        Məlumatı sil
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>
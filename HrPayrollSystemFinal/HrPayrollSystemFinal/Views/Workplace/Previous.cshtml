@model IEnumerable<HrPayrollSystemFinal.Models.PreviousWorkPlace>

@{
    ViewData["Title"] = "Əvvəlki iş yerlərinin siyahısı";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>İşçilərin əvvəlki iş yerləri</h2>

<p>
    <a asp-action="AddPrevious"></a>
</p>
<div>
    <div class="card shadow mb-4">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Işçinin A.S.A</th>
                            <th>Əvvəlki iş yeri </th>
                            <th>Daxil olma tarixi</th>
                            <th>Çıxış tarixi</th>
                            <th>İşdən çıxma səbəbi</th>
                        </tr>
                    </thead>
                    <tbody id="myTable">

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Worker.Name)
                                    @Html.DisplayFor(modelItem => item.Worker.Surname)
                                    @Html.DisplayFor(modelItem => item.Worker.FatherName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.WorkPlaceName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.EntryDate)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ExitDate)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ReasonOfTermination)
                                </td>
                                @*<td>
                                        <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id">Düzəliş et</a> |
                                        <a class="btn btn-outline-danger delete"
                                           data-id="@item.Id"
                                           data-controller="Position"
                                           data-action="Delete"
                                           data-body-message="Siz bu informasiyani silməkdən əminsiniz?">
                                            Məlumatı sil
                                        </a>
                                    </td>*@
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>

@model HrPayrollSystemFinal.Models.CurrentWorkPlace

@{
    ViewData["Title"] = "İş yerini əlavə et";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>İşçini vəzifəyə qeyd et</h2>
<hr />
<div class="row">
    <div class="col-md-10">
        <form asp-action="AddCurrent" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            @await Component.InvokeAsync("Employee")
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="CompanyId" class="control-label"></label>
                    <select asp-for="CompanyId" id="companies" class="form-control" asp-items="@(new SelectList(ViewBag.Companies,"Id","Name"))">
                        <option value="">Şirkət adı daxil edin..</option>
                    </select>
                    <span asp-validation-for="CompanyId" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="DepartmentId" class="control-label"></label>
                    <select asp-for="DepartmentId" id="depData" class="form-control">
                        <option value="">Departament adı daxil edin..</option>
                    </select>
                    <span asp-validation-for="DepartmentId" class="text-danger"></span>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="ShopId" class="control-label"></label>
                    <select asp-for="ShopId" class="form-control">
                        <option value="">Mağaza adı daxil edin..</option>
                    </select>
                    <span asp-validation-for="ShopId" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="PositionId" class="control-label"></label>
                    <select asp-for="PositionId" class="form-control">
                        <option value="">Vəzifə daxil edin..</option>
                    </select>
                    <span asp-validation-for="PositionId" class="text-danger"></span>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="EntryDate" class="control-label"></label>
                    <input asp-for="EntryDate" class="form-control" />
                    <span asp-validation-for="EntryDate" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Əlavə et" class="btn btn-outline-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Current">Ümumi siyahıya qayıt</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
